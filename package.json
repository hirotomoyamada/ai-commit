{
  "name": "ai-commit",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirotomoyamada/ai-commmit"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "",
    "build": "turbo run build",
    "lint": "eslint packages/**/src scripts/**/** --ext .ts --max-warnings 0 --config .eslintrc --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check packages/**/src scripts/**/** --cache",
    "format:write": "prettier --write packages/**/src scripts/**/** --cache",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "quality": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test",
    "changelog": "tsx scripts/changelog",
    "changelog:latest": "tsx scripts/changelog --latest",
    "version:dev": "changeset version --snapshot dev",
    "version:next": "changeset version --snapshot next",
    "release": "changeset publish",
    "release:dev": "changeset publish --tag dev",
    "release:next": "changeset publish --tag next",
    "clean": "pnpm -r --parallel exec rimraf dist *.log"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@changesets/types": "^6.0.0",
    "@clack/prompts": "^0.7.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@octokit/rest": "^20.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  }
}
