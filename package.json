{
  "name": "@hirotomoyamada/ai-commit",
  "description": "AI generates git commit messages on your behalf.",
  "version": "1.0.4",
  "keywords": [
    "ai",
    "git",
    "openai",
    "chat-gpt",
    "cli",
    "commit",
    "ai-commit"
  ],
  "author": "Hirotomo Yamada <hirotomo.yamada@avap.co.jp>",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "bin"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirotomoyamada/ai-commit",
    "directory": "packages/ai-commit"
  },
  "bugs": {
    "url": "https://github.com/hirotomoyamada/ai-commit/issues"
  },
  "bin": {
    "ai-commit": "bin/index.js",
    "aic": "bin/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "build": "tsup src --format cjs --clean --shims",
    "lint": "eslint src/**/*  --ext .ts --max-warnings 0 --config .eslintrc --cache",
    "format": "prettier --write .",
    "format:check": "prettier --check src/**/*  --cache",
    "format:write": "prettier --write src/**/*  --cache",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "quality": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm test",
    "version:dev": "changeset version --snapshot dev",
    "version:next": "changeset version --snapshot next",
    "release": "changeset publish",
    "release:dev": "changeset publish --tag dev",
    "release:next": "changeset publish --tag next",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "commander": "^11.1.0",
    "list-it": "^1.3.12",
    "openai": "^4.24.1"
  },
  "devDependencies": {
    "execa": "^8.0.1",
    "update-notifier": "^7.0.0",
    "@types/update-notifier": "^6.0.8",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@changesets/types": "^6.0.0",
    "@clack/prompts": "^0.7.0",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@octokit/rest": "^20.0.2",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "chalk": "^5.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "jest-watch-typeahead": "^2.2.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "@swc-node/jest": "^1.6.8",
    "@swc/core": "^1.3.100",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "clean-package": "2.2.0"
  }
}
